<Window x:Class="DataBindingWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBindingWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel VerticalAlignment="Center">
        <TextBox Width="100" Height="40" Margin="10" Text="{Binding ElementName=miSlider, Path=Value, Mode=TwoWay}"></TextBox>
        <Slider Width="200" Name="miSlider" Minimum="0" Maximum="100"></Slider>
    </StackPanel>
</Window>
